<head>
  <title>Flashcard Manager (DE/EN)</title>
  <link rel="stylesheet" href="application.css">
</head>

<body>
  <section id="container">

    <header class="clearfix">
      <h1>Flashcard Manager (DE/EN)</h1>
      <ul class="navigation-links">
        <li><%= link_to 'All Cards', cards_path %></li>
        <li><%= link_to 'Add Card', new_card_path %></li>
      </ul>
    </header>

    <section>
      <p style="font-size: 22px;">
        The answer is "<%= @card.original_text %>"
      </p>
    </section>

    <section>
      <%= link_to 'Next Due Card', root_path, :class => "btn btn-default" %>
    </section>
  </section>
</body>
